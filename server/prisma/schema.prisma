generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  passwordHash   String
  status         UserStatus @default(ACTIVE)
  lastLoginAt    DateTime? 
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

enum UserStatus {
  ACTIVE
  BLOCKED
  DELETED
}